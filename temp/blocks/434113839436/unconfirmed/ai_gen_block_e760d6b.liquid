{% doc %}
  @prompt
    I want a price match guarantee section to show we can beat any quote from any other local suppliers

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-price-match-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding }}px;
    border-radius: {{ block.settings.border_radius }}px;
    text-align: center;
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};}

  .ai-price-match-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;}

  .ai-price-match-badge-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background-color: {{ block.settings.badge_color }};
    color: {{ block.settings.badge_text_color }};
    padding: 8px 16px;
    border-radius: 50px;
    font-size: 14px;
    font-weight: 600;
    margin-bottom: 16px;
    gap: 8px;
  }

  .ai-price-match-badge-{{ ai_gen_id }} svg {
    width: 20px;
    height: 20px;flex-shrink: 0;
  }

  .ai-price-match-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 16px 0;
    font-weight: 700;
  }

  .ai-price-match-description-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    margin: 0 0 24px 0;
    line-height: 1.5;
  }

  .ai-price-match-features-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
    margin-bottom: 32px;
  }

  .ai-price-match-feature-{{ ai_gen_id }} {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    text-align: left;
  }

  .ai-price-match-feature-icon-{{ ai_gen_id }} {
    background-color: {{ block.settings.feature_icon_bg }};
    color: {{ block.settings.feature_icon_color }};
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    margin-top: 2px;
  }

  .ai-price-match-feature-icon-{{ ai_gen_id }} svg {
    width: 20px;
    height: 20px;
  }

  .ai-price-match-feature-content-{{ ai_gen_id }} {
    flex: 1;
  }

  .ai-price-match-feature-title-{{ ai_gen_id }} {
    color: {{ block.settings.feature_title_color }};
    font-size: 16px;
    font-weight: 600;
    margin: 0 0 4px 0;
  }

  .ai-price-match-feature-text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size:14px;
    margin: 0;line-height: 1.4;
  }

  .ai-price-match-cta-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 16px;
  }

  .ai-price-match-button-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    padding: 16px 32px;
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 600;
    text-decoration: none;
    display: inline-block;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .ai-price-match-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-price-match-contact-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: 14px;
    margin: 0;
  }

  .ai-price-match-contact-{{ ai_gen_id }} a {
    color: {{ block.settings.link_color }};
    text-decoration: none;
    font-weight: 600;
  }

  .ai-price-match-contact-{{ ai_gen_id }} a:hover {
    text-decoration: underline;
  }

  @media screen and (max-width: 749px) {
    .ai-price-match-{{ ai_gen_id }} {
      padding: {{ block.settings.padding | times: 0.7 }}px;
    }

    .ai-price-match-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-price-match-features-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 16px;
    }

    .ai-price-match-cta-{{ ai_gen_id }} {
      gap: 12px;
    }
  }
{% endstyle %}<div class="ai-price-match-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-price-match-container-{{ ai_gen_id }}">
    {% if block.settings.show_badge %}
      <div class="ai-price-match-badge-{{ ai_gen_id }}">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
        </svg>{{ block.settings.badge_text }}
      </div>
    {% endif %}

    {% if block.settings.heading != blank %}
      <h2 class="ai-price-match-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    {% if block.settings.description != blank %}
      <div class="ai-price-match-description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
    {% endif %}

    <div class="ai-price-match-features-{{ ai_gen_id }}">
      {% if block.settings.feature_1_title != blank %}
        <div class="ai-price-match-feature-{{ ai_gen_id }}">
          <div class="ai-price-match-feature-icon-{{ ai_gen_id }}">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M9 11l3 3l8-8"/>
              <path d="M21 12c0 4.97-4.03 9-9 9s-9-4.03-9-9s4.03-9 9-9c1.51 0 2.93.37 4.18 1.03"/>
            </svg>
          </div>
          <div class="ai-price-match-feature-content-{{ ai_gen_id }}">
            <h3 class="ai-price-match-feature-title-{{ ai_gen_id }}">{{ block.settings.feature_1_title }}</h3>
            <p class="ai-price-match-feature-text-{{ ai_gen_id }}">{{ block.settings.feature_1_text }}</p>
          </div>
        </div>
      {% endif %}

      {% if block.settings.feature_2_title != blank %}
        <div class="ai-price-match-feature-{{ ai_gen_id }}">
          <div class="ai-price-match-feature-icon-{{ ai_gen_id }}">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"/>
              <path d="M12 6v6l4 2"/>
            </svg>
          </div>
          <div class="ai-price-match-feature-content-{{ ai_gen_id }}">
            <h3 class="ai-price-match-feature-title-{{ ai_gen_id }}">{{ block.settings.feature_2_title }}</h3>
            <p class="ai-price-match-feature-text-{{ ai_gen_id }}">{{ block.settings.feature_2_text }}</p>
          </div>
        </div>
      {% endif %}

      {% if block.settings.feature_3_title != blank %}
        <div class="ai-price-match-feature-{{ ai_gen_id }}">
          <div class="ai-price-match-feature-icon-{{ ai_gen_id }}">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M12 2L2 7l10 5 10-5-10-5z"/>
              <path d="M2 17l10 5 10-5"/><path d="M2 12l10 5 10-5"/>
            </svg>
          </div>
          <div class="ai-price-match-feature-content-{{ ai_gen_id }}">
            <h3 class="ai-price-match-feature-title-{{ ai_gen_id }}">{{ block.settings.feature_3_title }}</h3>
            <p class="ai-price-match-feature-text-{{ ai_gen_id }}">{{ block.settings.feature_3_text }}</p>
          </div>
        </div>
      {% endif %}
    </div><div class="ai-price-match-cta-{{ ai_gen_id }}">
      {% if block.settings.button_text != blank %}
        <a href="{{ block.settings.button_link }}" class="ai-price-match-button-{{ ai_gen_id }}">
          {{ block.settings.button_text }}
        </a>
      {% endif %}

      {% if block.settings.contact_text != blank %}
        <p class="ai-price-match-contact-{{ ai_gen_id }}">{{ block.settings.contact_text }}</p>
      {% endif %}
    </div>
  </div>
</div>

