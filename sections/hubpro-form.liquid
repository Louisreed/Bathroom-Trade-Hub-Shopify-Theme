        method="post"
        action=""
        class="aaamembership_form aaa-form-null {{ form_classes }}"
        enctype="multipart/form-data"
      >
        <!-- Hidden form configuration fields -->
        <input type="hidden" name="container_id" value="">
        <input type="hidden" name="form_id" value="{{ section.settings.form_id | default: '13451' }}">
        <input
          type="hidden"
          name="form_domain"
          value="{{ section.settings.form_domain | default: 'ab97df-6.myshopify.com' }}"
        >
        <input
          type="hidden"
          name=""
          value="{{ section.settings.success_message | default: 'Thank you, we will be in touch soon.' }}"
          class="success_msg"
        >
        <input
          type="hidden"
          name=""
          value="{{ section.settings.password_tooltip | default: 'This password is for new user only, old user can use their existing password to login.' }}"
          class="password_tooltip_text_lang"
        >
        <input
          type="hidden"
          name=""
          value="{{ section.settings.thank_you_url | default: 'https://bathroomtradehub.co.uk/pages/hubpro-thank-you-for-signing-up' }}"
          class="aaa_thankyoupageurl"
        >

        <!-- Form header -->
        {% if section.settings.show_form_header %}
          <div class="">
            <h1 type="h1" class="header" name="" id="">{{ section.settings.form_title | default: 'HubPRO' }}</h1>
          </div>
          {% if section.settings.show_divider %}
            <div class="">
              <hr type="hr" class="aaadivider" name="" id="">
            </div>
          {% endif %}
          {% if section.settings.form_subtitle != blank %}
            <div class="">
              <h3 type="h3" class="header" name="" id="">{{ section.settings.form_subtitle }}</h3>
            </div>
          {% endif %}
        {% endif %}

        <!-- First Name -->
        {% if section.settings.show_first_name %}
          <div class="membership-text form-group field-first-name">
            <label for="first-name" class="membership-text-label">
              First Name
              {% if section.settings.first_name_required -%}
                <span class="required">*</span>
              {%- endif %}
            </label>
            <input
              type="text"
              {% if section.settings.first_name_required %}
                required=""
              {% endif %}
              class="{{ field_classes }}"
              name="first-name"
              id="first-name"
              {% if section.settings.first_name_required %}
