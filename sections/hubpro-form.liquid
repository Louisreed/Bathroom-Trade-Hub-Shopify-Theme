{%- comment -%}
  HubPRO Membership Form Section
  Renders a third-party membership form with comprehensive styling controls

  @param {string} form_classes - Additional CSS classes for the form
  @param {string} field_classes - CSS classes for form fields
  @param {string} button_classes - CSS classes for the submit button
{%- endcomment -%}

{%- liquid
  assign form_classes = section.settings.form_classes | default: ''
  assign field_classes = section.settings.field_classes | default: 'form-control'
  assign button_classes = section.settings.button_classes | default: 'btn btn-primary'
  assign container_width = section.settings.container_width | default: 'page-width'
-%}

<style>
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    --form-background: {{ section.settings.form_background }};
    --form-border-radius: {{ section.settings.form_border_radius }}px;
    --form-max-width: {{ section.settings.form_max_width }}px;
    --form-padding: {{ section.settings.form_padding }}px;
    --field-border-color: {{ section.settings.field_border_color }};
    --field-border-radius: {{ section.settings.field_border_radius }}px;
    --field-padding: {{ section.settings.field_padding }}px;
    --field-font-size: {{ section.settings.field_font_size }}px;
    --label-color: {{ section.settings.label_color }};
    --label-font-size: {{ section.settings.label_font_size }}px;
    --label-font-weight: {{ section.settings.label_font_weight }};
    --button-background: {{ section.settings.button_background }};
    --button-color: {{ section.settings.button_color }};
    --button-font-size: {{ section.settings.button_font_size }}px;
    --button-padding: {{ section.settings.button_padding_vertical }}px {{ section.settings.button_padding_horizontal }}px;
    --button-border-radius: {{ section.settings.button_border_radius }}px;
    --button-hover-background: {{ section.settings.button_hover_background }};
    --required-color: {{ section.settings.required_color }};
    --header-color: {{ section.settings.header_color }};
  }

  .hubpro-form-section {
    padding-top: var(--section-padding-top);
    padding-bottom: var(--section-padding-bottom);
  }

  .hubpro-form-container {
    background: var(--form-background);
    border-radius: var(--form-border-radius);
    max-width: var(--form-max-width);
    margin: 0 auto;
    padding: var(--form-padding);
    {% if section.settings.form_shadow %}
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    {% endif %}
  }

  /* Form field overrides */
  #shopify-section-{{ section.id }} .aaamembership_form input[type="text"],
  #shopify-section-{{ section.id }} .aaamembership_form input[type="search"],
  #shopify-section-{{ section.id }} .aaamembership_form input[type="password"],
  #shopify-section-{{ section.id }} .aaamembership_form input[type="email"],
  #shopify-section-{{ section.id }} .aaamembership_form input[type="file"],
  #shopify-section-{{ section.id }} .aaamembership_form input[type="number"],
  #shopify-section-{{ section.id }} .aaamembership_form input[type="tel"],
  #shopify-section-{{ section.id }} .aaamembership_form textarea,
  #shopify-section-{{ section.id }} .aaamembership_form select {
    width: 100% !important;
    margin: 0 !important;
    border: 1px solid var(--field-border-color) !important;
    border-radius: var(--field-border-radius) !important;
    padding: var(--field-padding) !important;
    font-size: var(--field-font-size) !important;
    {% if section.settings.field_focus_color %}
      transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    {% endif %}
  }

  {% if section.settings.field_focus_color %}
  #shopify-section-{{ section.id }} .aaamembership_form input:focus,
  #shopify-section-{{ section.id }} .aaamembership_form textarea:focus,
  #shopify-section-{{ section.id }} .aaamembership_form select:focus {
    border-color: {{ section.settings.field_focus_color }} !important;
    box-shadow: 0 0 0 2px rgba({{ section.settings.field_focus_color | color_extract: 'red' }}, {{ section.settings.field_focus_color | color_extract: 'green' }}, {{ section.settings.field_focus_color | color_extract: 'blue' }}, 0.2) !important;
    outline: none !important;
  }
  {% endif %}

  /* Label styling */
  #shopify-section-{{ section.id }} .aaamembership_form label {
    color: var(--label-color) !important;
    font-size: var(--label-font-size) !important;
    font-weight: var(--label-font-weight) !important;
    margin-bottom: 8px !important;
    display: block !important;
  }

  /* Required asterisk styling */
  #shopify-section-{{ section.id }} .aaamembership_form .required {
    color: var(--required-color) !important;
  }

  /* Button styling */
  #shopify-section-{{ section.id }} .aaamembership_form .membership-submit button {
    background-color: var(--button-background) !important;
    color: var(--button-color) !important;
    font-size: var(--button-font-size) !important;
    padding: var(--button-padding) !important;
    border-radius: var(--button-border-radius) !important;
    border: none !important;
    cursor: pointer !important;
    transition: background-color 0.2s ease !important;
    {% if section.settings.button_full_width %}
      width: 100% !important;
    {% endif %}
  }

  #shopify-section-{{ section.id }} .aaamembership_form .membership-submit button:hover {
    background-color: var(--button-hover-background) !important;
  }

  /* Header styling */
  #shopify-section-{{ section.id }} .aaamembership_form .header {
    color: var(--header-color) !important;
  }

  /* Form group spacing */
  #shopify-section-{{ section.id }} .aaamembership_form .form-group {
    margin-bottom: {{ section.settings.field_spacing }}px !important;
  }

  /* Phone number special styling */
  #shopify-section-{{ section.id }} .aaamembership_form .aaa-customer-phone-number-country {
    width: 49% !important;
    float: left !important;
    margin-left: 1% !important;
    margin-right: 1% !important;
  }

  /* Checkbox styling */
  #shopify-section-{{ section.id }} .aaamembership_form .checkbox {
    width: auto !important;
    margin-right: 8px !important;
  }

  /* Responsive adjustments */
  @media screen and (max-width: 749px) {
    .hubpro-form-container {
      padding: calc(var(--form-padding) * 0.75);
    }

    #shopify-section-{{ section.id }} .aaamembership_form input,
    #shopify-section-{{ section.id }} .aaamembership_form textarea,
    #shopify-section-{{ section.id }} .aaamembership_form select {
      font-size: calc(var(--field-font-size) * 0.9) !important;
    }
  }
</style>

<div class="hubpro-form-section color-{{ section.settings.color_scheme }}">
  <div class="{{ container_width }}">
    {% if section.settings.heading != blank %}
      <div class="section-header text-center">
        <h2 class="section-heading">{{ section.settings.heading }}</h2>
        {% if section.settings.subheading != blank %}
          <p class="section-subheading">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="hubpro-form-container">
