{%- comment -%}
  HubPRO Membership Form Section
  Raw HTML form with customizable styling overrides
{%- endcomment -%}

{%- liquid
  assign form_id = 'HubProForm-' | append: section.id
-%}

<style>
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    --section-background-color: {{ section.settings.section_background_color | default: 'transparent' }};
    --form-text-color: {{ section.settings.text_color | default: 'rgba(18,18,18,1)' }};
    --form-border-color: {{ section.settings.border_color | default: '#cccccc' }};
    --form-background-color: {{ section.settings.background_color | default: 'rgba(255,255,255,1)' }};
    background-color: var(--section-background-color);
  }

  .hubpro-membership-form {
    max-width: {{ section.settings.form_width }}px;
    margin: 0 auto;
    padding: {{ section.settings.form_padding }}px;
    background-color: var(--form-background-color);
    {% if section.settings.form_border_radius > 0 %}
      border-radius: {{ section.settings.form_border_radius }}px;
    {% endif %}
    {% if section.settings.form_shadow %}
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    {% endif %}
  }

  /* Override styling for raw HTML form content */
  .hubpro-membership-form .aaa-membership-form-container {
    margin-bottom: {{ section.settings.field_spacing }}px;
  }

  .hubpro-membership-form .form-heading {
    text-align: {{ section.settings.heading_alignment }};
    margin-bottom: {{ section.settings.heading_spacing }}px;
    color: var(--form-text-color);
  }

  .hubpro-membership-form .form-divider {
    border: none;
    height: 1px;
    background-color: var(--form-border-color);
    margin: {{ section.settings.divider_spacing }}px 0;
  }

  /* Custom styling for AAA generated forms */
  #shopify-section-{{ section.id }} .aaamembership_form input[type="text"],
  #shopify-section-{{ section.id }} .aaamembership_form input[type="search"],
  #shopify-section-{{ section.id }} .aaamembership_form input[type="password"],
  #shopify-section-{{ section.id }} .aaamembership_form input[type="email"],
  #shopify-section-{{ section.id }} .aaamembership_form input[type="file"],
  #shopify-section-{{ section.id }} .aaamembership_form input[type="number"],
  #shopify-section-{{ section.id }} .aaamembership_form input[type="tel"],
  #shopify-section-{{ section.id }} .aaamembership_form textarea,
  #shopify-section-{{ section.id }} .aaamembership_form select {
    width: 100% !important;
    margin: 0 !important;
    padding: {{ section.settings.input_padding }}px !important;
    border: 1px solid var(--form-border-color) !important;
    border-radius: {{ section.settings.input_border_radius }}px !important;
    font-size: {{ section.settings.input_font_size }}px !important;
    background-color: #ffffff !important;
  }

  #shopify-section-{{ section.id }} .aaamembership_form input:focus {
    outline: none !important;
    border-color: {{ section.settings.focus_color | default: '#007cba' }} !important;
  }

  #shopify-section-{{ section.id }} .aaamembership_form label {
    display: block !important;
    margin-bottom: 8px !important;
    font-weight: {{ section.settings.label_font_weight }} !important;
    font-size: {{ section.settings.label_font_size }}px !important;
    color: var(--form-text-color) !important;
  }

  #shopify-section-{{ section.id }} .aaamembership_form .form-group {
    margin-bottom: {{ section.settings.field_spacing }}px !important;
  }

  #shopify-section-{{ section.id }} .aaamembership_form .membership-submit button {
    background-color: {{ section.settings.button_background_color | default: '#BB9F4D' }} !important;
    color: {{ section.settings.button_text_color | default: '#FFFFFF' }} !important;
    font-size: {{ section.settings.button_font_size | default: '16' }}px !important;
    font-weight: {{ section.settings.button_font_weight }} !important;
    padding: {{ section.settings.button_padding }}px !important;
    border-radius: {{ section.settings.button_border_radius }}px !important;
    border: none !important;
    cursor: pointer !important;
    width: 100% !important;
    transition: opacity 0.3s ease !important;
  }

  #shopify-section-{{ section.id }} .aaamembership_form .membership-submit button:hover {
    opacity: 0.9 !important;
  }

  #shopify-section-{{ section.id }} .aaamembership_form .required {
    color: #e74c3c !important;
  }

  /* Hide AAA-generated hardcoded headings */
  #shopify-section-{{ section.id }} .aaamembership_form h1.header,
  #shopify-section-{{ section.id }} .aaamembership_form h3.header,
  #shopify-section-{{ section.id }} .aaamembership_form .aaadivider {
    display: none !important;
  }
</style>

<div class="section section--padding{% if section.settings.divider %} section--divider{% endif %}{% if section.settings.rounded %} section--rounded relative{% endif %}">
  <div class="page-width{% if section.settings.narrow %} page-width--narrow{% endif %} relative">
    <div class="hubpro-membership-form">
      {%- comment -%} Form Heading {%- endcomment -%}
      {%- if section.settings.show_heading and section.settings.form_heading != blank -%}
        <{{ section.settings.heading_tag }} class="form-heading">
          {{ section.settings.form_heading | escape }}
        </{{ section.settings.heading_tag }}>
      {%- endif -%}

      {%- comment -%} Form Divider {%- endcomment -%}
      {%- if section.settings.show_divider -%}
        <hr class="form-divider">
      {%- endif -%}

      {%- comment -%} Form Subheading {%- endcomment -%}
      {%- if section.settings.show_subheading and section.settings.form_subheading != blank -%}
        <h3 class="form-subheading" style="color: var(--form-text-color);">
          {{ section.settings.form_subheading | escape }}
        </h3>
      {%- endif -%}

      {%- comment -%} Raw HTML Form Content {%- endcomment -%}
      {%- if section.settings.raw_form_html != blank -%}
        <div class="aaa-membership-form-container">
          {{ section.settings.raw_form_html }}
        </div>
      {%- else -%}
        <div class="form-placeholder" style="padding: 40px; text-align: center; border: 2px dashed #ccc; color: #999;">
          <p>Please paste your raw form HTML in the "Raw Form HTML" setting above.</p>
        </div>
      {%- endif -%}

      {%- comment -%} Privacy Notice {%- endcomment -%}
      {%- if section.settings.show_privacy_notice and section.settings.privacy_notice_text != blank -%}
        <div
          class="form-privacy"
          style="text-align: {{ section.settings.privacy_alignment }}; margin-top: {{ section.settings.field_spacing }}px;"
        >
          <div
            class="privacy-notice rte"
            style="font-size: {{ section.settings.privacy_font_size }}px; color: var(--form-text-color); opacity: 0.8;"
          >
            {{ section.settings.privacy_notice_text }}
          </div>
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

