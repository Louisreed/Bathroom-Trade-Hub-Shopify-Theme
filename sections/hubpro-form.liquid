<style>
  .hubpro-section {
    padding: {{ section.settings.section_padding_top }}px 0 {{ section.settings.section_padding_bottom }}px;
  }

  .hubpro-form-container {
    max-width: {{ section.settings.form_max_width }}px;
    margin: 0 auto;
    {% if section.settings.form_background != 'rgba(0,0,0,0)' %}
      background-color: {{ section.settings.form_background }};
      padding: {{ section.settings.form_padding }}px;
      border-radius: {{ section.settings.form_border_radius }}px;
    {% endif %}
  }

  /* Header Styling */
  #shopify-section-{{ section.id }} .header {
    color: {{ section.settings.header_color }};
    margin-bottom: {{ section.settings.header_spacing }}px;
    text-align: {{ section.settings.header_alignment }};
  }

  #shopify-section-{{ section.id }} h1.header {
    font-size: {{ section.settings.h1_font_size }}px;
    font-weight: {{ section.settings.h1_font_weight }};
    margin: 0;
  }

  #shopify-section-{{ section.id }} h3.header {
    font-size: {{ section.settings.h3_font_size }}px;
    font-weight: {{ section.settings.h3_font_weight }};
    margin: 0;
  }

  /* Divider */
  #shopify-section-{{ section.id }} .aaadivider {
    border: none;
    border-top: 1px solid {{ section.settings.divider_color }};
    margin: {{ section.settings.divider_spacing }}px 0;
  }

  /* Form Groups */
  #shopify-section-{{ section.id }} .form-group {
    margin-bottom: {{ section.settings.field_spacing }}px;
  }

  /* Labels */
  #shopify-section-{{ section.id }} label {
    display: block;
    color: {{ section.settings.label_color }};
    font-size: {{ section.settings.label_font_size }}px;
    font-weight: {{ section.settings.label_font_weight }};
    margin-bottom: 8px;
  }

  #shopify-section-{{ section.id }} .required {
    color: {{ section.settings.required_color }};
  }

  /* Form Controls */
  #shopify-section-{{ section.id }} .form-control {
    width: 100%;
    padding: {{ section.settings.field_padding }}px;
    font-size: {{ section.settings.field_font_size }}px;
    border: {{ section.settings.field_border_width }}px solid {{ section.settings.field_border_color }};
    border-radius: {{ section.settings.field_border_radius }}px;
    background-color: {{ section.settings.field_background }};
    box-sizing: border-box;
    transition: border-color 0.2s ease;
  }

  #shopify-section-{{ section.id }} .form-control:focus {
    border-color: {{ section.settings.field_focus_color }};
    outline: none;
    {% if section.settings.field_focus_glow %}
      box-shadow: 0 0 0 2px rgba({{ section.settings.field_focus_color | color_extract: 'red' }}, {{ section.settings.field_focus_color | color_extract: 'green' }}, {{ section.settings.field_focus_color | color_extract: 'blue' }}, 0.2);
    {% endif %}
  }

  /* Phone number fields layout */
  #shopify-section-{{ section.id }} .phone-number-wrapper {
    display: flex;
    gap: 2%;
  }

  #shopify-section-{{ section.id }} .aaa-customer-phone-number-country {
    width: 49%;
  }

  #shopify-section-{{ section.id }} .aaa-customer-phone-number-class {
    width: 49%;
  }

  /* Checkbox styling */
  #shopify-section-{{ section.id }} .membership-checkbox {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  #shopify-section-{{ section.id }} .checkbox {
    width: auto;
    margin: 0;
  }

  #shopify-section-{{ section.id }} .membership-checkbox label {
    margin-bottom: 0;
    display: inline;
  }

  /* Button styling */
  #shopify-section-{{ section.id }} .button-input {
    background-color: {{ section.settings.button_background }};
    color: {{ section.settings.button_color }};
    font-size: {{ section.settings.button_font_size }}px;
    font-weight: {{ section.settings.button_font_weight }};
    padding: {{ section.settings.button_padding_vertical }}px {{ section.settings.button_padding_horizontal }}px;
    border-radius: {{ section.settings.button_border_radius }}px;
    border: {{ section.settings.button_border_width }}px solid {{ section.settings.button_border_color }};
    cursor: pointer;
    transition: all 0.2s ease;
    {% if section.settings.button_full_width %}width: 100%;{% endif %}
    {% if section.settings.button_text_transform != 'none' %}text-transform: {{ section.settings.button_text_transform }};{% endif %}
  }

  #shopify-section-{{ section.id }} .button-input:hover {
    background-color: {{ section.settings.button_hover_background }};
    color: {{ section.settings.button_hover_color }};
    {% if section.settings.button_hover_transform %}transform: translateY(-1px);{% endif %}
  }

  /* Tooltip styling */
  #shopify-section-{{ section.id }} .tooltip {
    position: relative;
    display: inline-block;
    margin-left: 5px;
  }

  #shopify-section-{{ section.id }} .tooltip .tooltiptext {
    visibility: hidden;
    width: 200px;
    background-color: #333;
    color: #fff;
    text-align: center;
    border-radius: 6px;
    padding: 5px 8px;
    position: absolute;
    z-index: 1;
    bottom: 125%;
    left: 50%;
    margin-left: -100px;
    font-size: 12px;
    line-height: 1.3;
  }

  #shopify-section-{{ section.id }} .tooltip:hover .tooltiptext {
    visibility: visible;
  }
</style>

