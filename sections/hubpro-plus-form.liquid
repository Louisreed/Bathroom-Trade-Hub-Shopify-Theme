<style>
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    {%- render 'section-variables', section: section -%}
    --form-text-color: {{ section.settings.text_color }};
    --form-background-color: {{ section.settings.background_color }};
    --form-button-background: {{ section.settings.button_background_color }};
    --form-button-text: {{ section.settings.button_text_color }};
    --form-border-color: {{ section.settings.border_color }};
  }

  #shopify-section-{{ section.id }} .hubpro-form {
    color: var(--form-text-color);
    background-color: var(--form-background-color);
  }

  #shopify-section-{{ section.id }} .form-field input,
  #shopify-section-{{ section.id }} .form-field select,
  #shopify-section-{{ section.id }} .form-field textarea {
    width: 100%;
    border: 1px solid var(--form-border-color);
    border-radius: {{ section.settings.border_radius }}px;
    padding: {{ section.settings.field_padding }}px;
    font-size: {{ section.settings.field_font_size }}px;
    color: var(--form-text-color);
  }

  #shopify-section-{{ section.id }} .form-field label {
    color: var(--form-text-color);
    font-size: {{ section.settings.label_font_size }}px;
    font-weight: {{ section.settings.label_font_weight }};
    margin-bottom: 8px;
    display: block;
  }

  #shopify-section-{{ section.id }} .form-submit button {
    background-color: var(--form-button-background) !important;
    color: var(--form-button-text) !important;
    font-size: {{ section.settings.button_font_size }}px !important;
    border-radius: {{ section.settings.button_border_radius }}px;
    padding: {{ section.settings.button_padding }}px {{ section.settings.button_padding | times: 1.5 }}px;
    border: none;
    cursor: pointer;
    transition: opacity 0.3s ease;
    width: {{ section.settings.button_width }};
  }

  #shopify-section-{{ section.id }} .form-submit button:hover {
    opacity: 0.9;
  }

  #shopify-section-{{ section.id }} .required {
    color: #e53e3e;
  }

  #shopify-section-{{ section.id }} .form-divider {
    border: none;
    height: {{ section.settings.divider_height }}px;
    background-color: var(--form-border-color);
    margin: {{ section.settings.divider_spacing }}px 0;
  }

  #shopify-section-{{ section.id }} .form-container {
    max-width: {{ section.settings.form_width }}px;
    margin: 0 auto;
  }

      /* HubPRO+ form layout - all fields full width */
  #shopify-section-{{ section.id }} .hubpro-form-fields > .membership-email,
  #shopify-section-{{ section.id }} .hubpro-form-fields > .membership-text,
  #shopify-section-{{ section.id }} .hubpro-form-fields > .membership-password {
    margin-bottom: {{ section.settings.field_spacing }}px;
  }

  /* Original membership form styles for compatibility */
  .aaamembership_form .membership-submit button {
    background-color: {{ section.settings.button_background_color | default: '#000000' }} !important;
    color: {{ section.settings.button_text_color | default: '#FFFFFF' }} !important;
    font-size: {{ section.settings.button_font_size | default: '14' }}px !important;
  }

  .aaamembership_form input[type="text"],
  .aaamembership_form input[type="search"],
  .aaamembership_form input[type="password"],
  .aaamembership_form input[type="email"],
  .aaamembership_form input[type="file"],
  .aaamembership_form input[type="number"],
  .aaamembership_form input[type="tel"],
  .aaamembership_form textarea,
  .aaamembership_form select {
    width: 100% !important;
    margin: 0;
    border: 1px solid var(--form-border-color);
  }

  /* Keep membership form classes for backwards compatibility */
</style>

<div class="section section--padding{% if section.settings.divider %} section--divider{% endif %}{% if section.settings.rounded %} section--rounded relative{% endif %}">
  <div class="page-width{% if section.settings.narrow %} page-width--narrow{% endif %} relative">
    <div class="form-container">
      <div class="hubpro-form">
