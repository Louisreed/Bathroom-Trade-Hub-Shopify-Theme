                  {%- if section.settings.first_name_required -%}
                    <span class="required">*</span>
                  {%- endif -%}
                </label>
                <input
                  type="text"
                  {% if section.settings.first_name_required %}
                    required=""
                  {% endif %}
                  class="form-control"
                  name="first-name"
                  id="first-name"
                  {% if section.settings.first_name_required %}
                    aria-required="true"
                  {% endif %}
                >
              </div>
            {%- endif -%}

            {%- comment -%} Last Name Field {%- endcomment -%}
            {%- if section.settings.show_last_name -%}
