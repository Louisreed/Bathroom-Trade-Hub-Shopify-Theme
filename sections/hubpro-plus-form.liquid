<style>
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    --form-text-color: {{ section.settings.text_color | default: 'rgba(18,18,18,1)' }};
    --form-border-color: {{ section.settings.border_color | default: '#cccccc' }};
    --form-background-color: {{ section.settings.background_color | default: 'rgba(255,255,255,1)' }};
  }

  .hubpro-plus-membership-form {
    max-width: {{ section.settings.form_width }}px;
    margin: 0 auto;
    padding: {{ section.settings.form_padding }}px;
    background-color: var(--form-background-color);
    {% if section.settings.form_border_radius > 0 %}
      border-radius: {{ section.settings.form_border_radius }}px;
    {% endif %}
    {% if section.settings.form_shadow %}
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    {% endif %}
  }

  .hubpro-plus-membership-form .form-group {
    margin-bottom: {{ section.settings.field_spacing }}px;
  }

  .hubpro-plus-membership-form .form-control {
    width: 100%;
    padding: {{ section.settings.input_padding }}px;
    border: 1px solid var(--form-border-color);
    border-radius: {{ section.settings.input_border_radius }}px;
    font-size: {{ section.settings.input_font_size }}px;
    background-color: #ffffff;
  }

  .hubpro-plus-membership-form .form-control:focus {
    outline: none;
    border-color: {{ section.settings.focus_color | default: '#007cba' }};
  }

  .hubpro-plus-membership-form label {
    display: block;
    margin-bottom: 8px;
    font-weight: {{ section.settings.label_font_weight }};
    font-size: {{ section.settings.label_font_size }}px;
    color: var(--form-text-color);
  }

  .hubpro-plus-membership-form .required {
    color: #e74c3c;
  }

  .hubpro-plus-membership-form .form-submit-button {
    background-color: {{ section.settings.button_background_color | default: '#000000' }};
    color: {{ section.settings.button_text_color | default: '#FFFFFF' }};
    border: none;
    padding: {{ section.settings.button_padding }}px;
    border-radius: {{ section.settings.button_border_radius }}px;
    font-size: {{ section.settings.button_font_size }}px;
    font-weight: {{ section.settings.button_font_weight }};
    cursor: pointer;
    width: 100%;
    transition: opacity 0.3s ease;
  }

  .hubpro-plus-membership-form .form-submit-button:hover {
    opacity: 0.9;
  }

  .hubpro-plus-membership-form .form-heading {
    text-align: {{ section.settings.heading_alignment }};
    margin-bottom: {{ section.settings.heading_spacing }}px;
    color: var(--form-text-color);
  }

  .hubpro-plus-membership-form .form-divider {
    border: none;
    height: 1px;
    background-color: var(--form-border-color);
    margin: {{ section.settings.divider_spacing }}px 0;
  }

  /* Stripe payment elements styling */
  .hubpro-plus-membership-form #paymentElement {
    margin-bottom: {{ section.settings.field_spacing }}px;
  }

  .hubpro-plus-membership-form #paymentResponse {
    margin-top: 10px;
    font-size: 14px;
  }

  /* Original AAA membership form compatibility styles */
  .aaamembership_form input[type="text"],
  .aaamembership_form input[type="search"],
  .aaamembership_form input[type="password"],
  .aaamembership_form input[type="email"],
  .aaamembership_form input[type="file"],
  .aaamembership_form input[type="number"],
  .aaamembership_form input[type="tel"],
  .aaamembership_form textarea,
  .aaamembership_form select {
    width: 100% !important;
    margin: 0;
    border: 1px solid #ccc;
  }

  .aaamembership_form .membership-submit button {
    background-color: {{ section.settings.button_background_color | default: '#000000' }} !important;
    color: {{ section.settings.button_text_color | default: '#FFFFFF' }} !important;
    font-size: {{ section.settings.button_font_size | default: '14' }}px !important;
  }
</style>

<div class="section section--padding{% if section.settings.divider %} section--divider{% endif %}{% if section.settings.rounded %} section--rounded relative{% endif %}">
  <div class="page-width{% if section.settings.narrow %} page-width--narrow{% endif %} relative">
    <div class="hubpro-plus-membership-form">
      {%- comment -%} Form Heading {%- endcomment -%}
      {%- if section.settings.show_heading and section.settings.form_heading != blank -%}
        <{{ section.settings.heading_tag }} class="form-heading">
          {{ section.settings.form_heading | escape }}
        </{{ section.settings.heading_tag }}>
      {%- endif -%}

      {%- comment -%} Form Divider {%- endcomment -%}
      {%- if section.settings.show_divider -%}
        <hr class="form-divider">
      {%- endif -%}

      {%- comment -%} Form Subheading {%- endcomment -%}
      {%- if section.settings.show_subheading and section.settings.form_subheading != blank -%}
        <h3 class="form-subheading" style="color: var(--form-text-color);">
          {{ section.settings.form_subheading | escape }}
        </h3>
      {%- endif -%}

      {%- comment -%} AAA Membership Form - HubPRO+ Version {%- endcomment -%}
      <form method="post" action="" class="aaamembership_form aaa-form-null" enctype="multipart/form-data">
        {%- comment -%} Hidden Fields for AAA Processing {%- endcomment -%}
        <input type="hidden" name="container_id" value="{{ section.settings.container_id }}">
        <input type="hidden" name="form_id" value="{{ section.settings.membership_form_id }}">
        <input type="hidden" name="form_domain" value="ab97df-6.myshopify.com">
        <input
          type="hidden"
          name=""
          value="{{ section.settings.success_message | default: 'Thank You!' }}"
          class="success_msg"
        >
        <input
          type="hidden"
          name=""
          value="{{ section.settings.password_tooltip | default: 'undefined' }}"
          class="password_tooltip_text_lang"
        >
        <input type="hidden" name="" value="{{ section.settings.thankyou_url }}" class="aaa_thankyoupageurl">

        {%- comment -%} First Name Field {%- endcomment -%}
        {%- if section.settings.show_first_name -%}
          <div class="membership-text form-group field-first-name">
            <label for="first-name" class="membership-text-label">
              {{ section.settings.first_name_label | default: 'First Name' | escape }}
              {%- if section.settings.first_name_required -%}
                <span class="required">*</span>
              {%- endif -%}
            </label>
            <input
              type="text"
              {% if section.settings.first_name_required %}
                required=""
              {% endif %}
              class="form-control"
              name="first-name"
              id="first-name"
              {% if section.settings.first_name_required %}
                aria-required="true"
              {% endif %}
            >
          </div>
        {%- endif -%}

        {%- comment -%} Last Name Field {%- endcomment -%}
        {%- if section.settings.show_last_name -%}
          <div class="membership-text form-group field-last-name">
            <label for="last-name" class="membership-text-label">
              {{ section.settings.last_name_label | default: 'Last Name' | escape }}
              {%- if section.settings.last_name_required -%}
                <span class="required">*</span>
              {%- endif -%}
            </label>
            <input
              type="text"
              {% if section.settings.last_name_required %}
                required=""
              {% endif %}
              class="form-control"
              name="last-name"
              id="last-name"
              {% if section.settings.last_name_required %}
                aria-required="true"
              {% endif %}
            >
          </div>
        {%- endif -%}

        {%- comment -%} Email Field {%- endcomment -%}
        {%- if section.settings.show_email -%}
          <div class="membership-email form-group field-replyemail">
            <label for="replyemail" class="membership-email-label">
              {{ section.settings.email_label | default: 'Email Address' | escape }}
              {%- if section.settings.email_required -%}
                <span class="required">*</span>
              {%- endif -%}
            </label>
            <input
              type="email"
              {% if section.settings.email_required %}
                required=""
              {% endif %}
              class="form-control"
              name="replyemail"
              id="replyemail"
              {% if section.settings.email_required %}
                aria-required="true"
              {% endif %}
            >
          </div>
        {%- endif -%}

        {%- comment -%} Company Field (Optional in Plus version) {%- endcomment -%}
        {%- if section.settings.show_company -%}
          <div class="membership-text form-group field-aaa-customer-company">
            <label for="aaa-customer-company" class="membership-text-label">
              {{ section.settings.company_label | default: 'Company' | escape }}
              {%- if section.settings.company_required -%}
                <span class="required">*</span>
              {%- endif -%}
            </label>
            <input
              type="text"
              {% if section.settings.company_required %}
                required=""
              {% endif %}
              class="form-control"
              name="aaa-customer-company"
              id="aaa-customer-company"
              {% if section.settings.company_required %}
                aria-required="true"
              {% endif %}
            >
          </div>
        {%- endif -%}

        {%- comment -%} Password Field {%- endcomment -%}
        {%- if section.settings.show_password -%}
          <div class="membership-password form-group field-customer-password">
            <label for="customer-password" class="membership-password-label">
              {{ section.settings.password_label | default: 'Password' | escape }}
              {%- if section.settings.password_required -%}
                <span class="required">*</span>
              {%- endif -%}
            </label>
            <input
              type="password"
              {% if section.settings.password_required %}
                required=""
              {% endif %}
              class="form-control"
              name="customer-password"
              id="customer-password"
              {% if section.settings.password_required %}
                aria-required="true"
              {% endif %}
            >
          </div>
        {%- endif -%}

        {%- comment -%} Stripe Payment Elements (Plus version specific) {%- endcomment -%}
        {%- if section.settings.enable_payment -%}
          <div id="paymentElement">
            <!-- Stripe payment element will be inserted here -->
          </div>
          <div id="paymentResponse">
            <!-- Payment response messages will appear here -->
          </div>
        {%- endif -%}

        {%- comment -%} Submit Button {%- endcomment -%}
        <div class="membership-submit form-group field-button-1497336985158">
          <button
            type="submit"
            class="button-input btn btn-primary form-submit-button"
            name="button-1497336985158"
            id="button-1497336985158"
          >
            {{ section.settings.submit_button_text | default: 'Subscribe Now' | escape }}
          </button>
        </div>

        {%- comment -%} Privacy Notice {%- endcomment -%}
        {%- if section.settings.show_privacy_notice and section.settings.privacy_notice_text != blank -%}
          <div class="form-privacy" style="text-align: {{ section.settings.privacy_alignment }};">
            <div
