{%- comment -%} Critical JavaScript for membership form processing - from original form {%- endcomment -%}
<script>
  function isMyMembershipScriptLoaded() {
    var url =
      'https://shopifycdn.aaawebstore.com/membership/appfiles/aaa_membership_script_min_v3.js?shop=ab97df-6.myshopify.com';
    var jsFound = 0;
    var scripts = document.getElementsByTagName('script');

    for (var i = scripts.length; i--; ) {
      if (scripts[i].src == url) {
        jsFound = 1;
      }
    }

    if (!jsFound) {
      var headTag = document.getElementsByTagName('head')[0];
      var jqTag = document.createElement('script');
      jqTag.type = 'text/javascript';
      jqTag.src = url;
      jqTag.onload = '';
      headTag.appendChild(jqTag);
    }
  }
  isMyMembershipScriptLoaded();
</script>

{%- comment -%} Custom JavaScript for additional form functionality {%- endcomment -%}
{%- if section.settings.enable_custom_script -%}
