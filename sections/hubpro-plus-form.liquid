                <!-- Stripe.js injects the Payment Element -->
              </div>
              <br>
              <div id="paymentResponse" class="hidden"></div>
            {%- endif -%}

            {%- comment -%} Submit Button {%- endcomment -%}
            <div class="membership-submit form-group field-button-1497336985158 form-field form-submit text-{{ section.settings.button_alignment }}">
              <button
                type="submit"
                class="button-input btn btn-primary form-submit-button"
