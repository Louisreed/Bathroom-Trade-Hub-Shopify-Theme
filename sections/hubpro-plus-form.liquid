          <input type="hidden" name="container_id" value="{{ section.settings.container_id }}">
          <input type="hidden" name="form_id" value="13447">
          <input type="hidden" name="form_domain" value="ab97df-6.myshopify.com">
          <input
            type="hidden"
            name=""
            value="{{ section.settings.success_message | default: 'Thank You!' | escape }}"
            class="success_msg"
          >
          <input
            type="hidden"
            name=""
            value="{{ section.settings.password_tooltip | default: 'This password is for new user only, old user can use their existing password to login.' | escape }}"
            class="password_tooltip_text_lang"
          >
          <input
            type="hidden"
            name=""
            value="{{ section.settings.thankyou_url | escape }}"
            class="aaa_thankyoupageurl"
          >

          {%- comment -%} Form Header {%- endcomment -%}
          {%- if section.settings.show_heading and section.settings.form_heading != blank -%}
            <div class="form-header text-{{ section.settings.heading_alignment }}">
              <{{ section.settings.heading_tag }}
                class="form-heading heading {{ section.settings.heading_size }}"
                style="color: var(--form-text-color); margin-bottom: {{ section.settings.heading_spacing }}px;"
              >
                {{ section.settings.form_heading | escape }}
              </{{ section.settings.heading_tag }}>
            </div>
          {%- endif -%}

          {%- comment -%} Form Divider {%- endcomment -%}
          {%- if section.settings.show_divider -%}
            <div class="form-divider-container">
              <hr class="form-divider">
            </div>
          {%- endif -%}

          {%- comment -%} Form Subheading {%- endcomment -%}
          {%- if section.settings.show_subheading and section.settings.form_subheading != blank -%}
            <div class="">
              <h3 type="h3" class="header" name="" id="" style="color: var(--form-text-color);">
                {{ section.settings.form_subheading | escape }}
              </h3>
            </div>
          {%- endif -%}

