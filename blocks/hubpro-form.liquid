{%- comment -%}
  HubPRO Membership Form Block
  Collects user information for HubPRO membership registration
{%- endcomment -%}

{%- liquid
  assign form_id = 'HubProForm-' | append: block.id
  assign form_action = block.settings.form_action | default: '#'
  assign form_method = block.settings.form_method | default: 'post'
-%}

<div
  class="hubpro-form size-style spacing-style"
  style="{% render 'section-size-style', settings: block.settings %}{% render 'section-spacing-style', settings: block.settings %}"
  {{ block.shopify_attributes }}
>
  <style>
    #shopify-section-{{ section.id }} #{{ form_id }} {
      --form-text-color: {{ block.settings.text_color }};
      --form-background-color: {{ block.settings.background_color }};
      --form-button-background: {{ block.settings.button_background_color }};
      --form-button-text: {{ block.settings.button_text_color }};
      --form-border-color: {{ block.settings.border_color }};
    }

    #{{ form_id }} {
      color: var(--form-text-color);
      background-color: var(--form-background-color);
    }

    #{{ form_id }} .form-field input,
    #{{ form_id }} .form-field select,
    #{{ form_id }} .form-field textarea {
      width: 100%;
      border: 1px solid var(--form-border-color);
      border-radius: {{ block.settings.border_radius }}px;
      padding: {{ block.settings.field_padding }}px;
      font-size: {{ block.settings.field_font_size }}px;
      color: var(--form-text-color);
    }

    #{{ form_id }} .form-field label {
      color: var(--form-text-color);
      font-size: {{ block.settings.label_font_size }}px;
      font-weight: {{ block.settings.label_font_weight }};
      margin-bottom: 8px;
      display: block;
    }

    #{{ form_id }} .form-submit button {
      background-color: var(--form-button-background) !important;
      color: var(--form-button-text) !important;
      font-size: {{ block.settings.button_font_size }}px !important;
      border-radius: {{ block.settings.button_border_radius }}px;
      padding: {{ block.settings.button_padding }}px {{ block.settings.button_padding | times: 1.5 }}px;
      border: none;
      cursor: pointer;
      transition: opacity 0.3s ease;
    }

    #{{ form_id }} .form-submit button:hover {
      opacity: 0.9;
    }

    #{{ form_id }} .required {
      color: #e53e3e;
    }

    #{{ form_id }} .form-divider {
      border: none;
      height: {{ block.settings.divider_height }}px;
      background-color: var(--form-border-color);
      margin: {{ block.settings.divider_spacing }}px 0;
    }
  </style>

  <form
    method="{{ form_method }}"
    action="{{ form_action }}"
    class="hubpro-membership-form"
    id="{{ form_id }}"
    enctype="multipart/form-data"
    novalidate
  >
    {%- comment -%} Hidden fields for form processing {%- endcomment -%}
    <input type="hidden" name="container_id" value="{{ block.settings.container_id }}">
    <input type="hidden" name="form_id" value="{{ block.settings.membership_form_id }}">
    <input type="hidden" name="form_domain" value="{{ shop.domain }}">
    <input
      type="hidden"
      name="success_message"
      value="{{ block.settings.success_message | default: 'Thank You!' | escape }}"
      class="success_msg"
    >
    <input
      type="hidden"
      name="password_tooltip_text_lang"
      value="{{ block.settings.password_tooltip | default: 'undefined' | escape }}"
      class="password_tooltip_text_lang"
    >
    <input
      type="hidden"
      name="thankyou_page_url"
      value="{{ block.settings.thankyou_url | escape }}"
      class="aaa_thankyoupageurl"
    >

    {%- comment -%} Form Header {%- endcomment -%}
    {%- if block.settings.show_heading and block.settings.form_heading != blank -%}
      <div class="form-header">
        <{{ block.settings.heading_tag }}
          class="form-heading"
          style="color: var(--form-text-color); font-size: {{ block.settings.heading_font_size }}px; margin-bottom: {{ block.settings.heading_spacing }}px;"
        >
          {{ block.settings.form_heading | escape }}
        </{{ block.settings.heading_tag }}>
      </div>
    {%- endif -%}

    {%- comment -%} Form Divider {%- endcomment -%}
    {%- if block.settings.show_divider -%}
      <div class="form-divider-container">
        <hr class="form-divider">
      </div>
    {%- endif -%}

    {%- comment -%} Form Fields {%- endcomment -%}
    <div class="form-fields" style="display: flex; flex-direction: column; gap: {{ block.settings.field_spacing }}px;">
      {%- comment -%} First Name Field {%- endcomment -%}
      {%- if block.settings.show_first_name -%}
        <div class="form-field field-first-name">
          <label for="{{ form_id }}-first-name" class="form-label">
            {{ block.settings.first_name_label | default: 'First Name' | escape }}
            {%- if block.settings.first_name_required -%}
              <span class="required" aria-label="required">*</span>
            {%- endif -%}
          </label>
          <input
            type="text"
            class="form-control"
            name="first-name"
            id="{{ form_id }}-first-name"
            placeholder="{{ block.settings.first_name_placeholder | escape }}"
            {% if block.settings.first_name_required %}
              required aria-required="true"
            {% endif %}
            autocomplete="given-name"
          >
        </div>
      {%- endif -%}

      {%- comment -%} Last Name Field {%- endcomment -%}
      {%- if block.settings.show_last_name -%}
        <div class="form-field field-last-name">
          <label for="{{ form_id }}-last-name" class="form-label">
            {{ block.settings.last_name_label | default: 'Last Name' | escape }}
            {%- if block.settings.last_name_required -%}
              <span class="required" aria-label="required">*</span>
            {%- endif -%}
          </label>
          <input
            type="text"
            class="form-control"
            name="last-name"
            id="{{ form_id }}-last-name"
            placeholder="{{ block.settings.last_name_placeholder | escape }}"
            {% if block.settings.last_name_required %}
              required aria-required="true"
            {% endif %}
            autocomplete="family-name"
          >
        </div>
      {%- endif -%}

      {%- comment -%} Email Field {%- endcomment -%}
      {%- if block.settings.show_email -%}
        <div class="form-field field-email">
          <label for="{{ form_id }}-email" class="form-label">
            {{ block.settings.email_label | default: 'Email Address' | escape }}
            {%- if block.settings.email_required -%}
              <span class="required" aria-label="required">*</span>
            {%- endif -%}
          </label>
          <input
            type="email"
            class="form-control"
            name="replyemail"
            id="{{ form_id }}-email"
            placeholder="{{ block.settings.email_placeholder | escape }}"
            {% if block.settings.email_required %}
              required aria-required="true"
            {% endif %}
            autocomplete="email"
            spellcheck="false"
            autocapitalize="off"
          >
        </div>
      {%- endif -%}

      {%- comment -%} Company Field {%- endcomment -%}
      {%- if block.settings.show_company -%}
        <div class="form-field field-company">
          <label for="{{ form_id }}-company" class="form-label">
            {{ block.settings.company_label | default: 'Company' | escape }}
            {%- if block.settings.company_required -%}
              <span class="required" aria-label="required">*</span>
            {%- endif -%}
          </label>
          <input
            type="text"
            class="form-control"
            name="aaa-customer-company"
            id="{{ form_id }}-company"
            placeholder="{{ block.settings.company_placeholder | escape }}"
            {% if block.settings.company_required %}
              required aria-required="true"
            {% endif %}
            autocomplete="organization"
          >
        </div>
      {%- endif -%}

      {%- comment -%} Password Field {%- endcomment -%}
      {%- if block.settings.show_password -%}
        <div class="form-field field-password">
          <label for="{{ form_id }}-password" class="form-label">
            {{ block.settings.password_label | default: 'Password' | escape }}
            {%- if block.settings.password_required -%}
              <span class="required" aria-label="required">*</span>
            {%- endif -%}
          </label>
          <input
            type="password"
            class="form-control"
            name="customer-password"
            id="{{ form_id }}-password"
            placeholder="{{ block.settings.password_placeholder | escape }}"
            {% if block.settings.password_required %}
              required aria-required="true"
            {% endif %}
            autocomplete="new-password"
          >
        </div>
      {%- endif -%}

      {%- comment -%} Submit Button {%- endcomment -%}
      <div class="form-field form-submit">
        <button
          type="submit"
          class="form-submit-button button-input btn btn-primary"
          name="hubpro-submit"
          id="{{ form_id }}-submit"
        >
          {{ block.settings.submit_button_text | default: 'Subscribe Now' | escape }}
        </button>
      </div>

      {%- comment -%} Privacy Notice {%- endcomment -%}
      {%- if block.settings.show_privacy_notice and block.settings.privacy_notice_text != blank -%}
        <div class="form-field form-privacy">
          <p
            class="privacy-notice"
            style="font-size: {{ block.settings.privacy_font_size }}px; color: var(--form-text-color); opacity: 0.8;"
          >
            {{ block.settings.privacy_notice_text }}
          </p>
        </div>
      {%- endif -%}
    </div>
  </form>
</div>

{%- comment -%} Custom JavaScript for form functionality {%- endcomment -%}
{%- if block.settings.enable_custom_script -%}
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const form = document.getElementById('{{ form_id }}');
      if (form) {
        form.addEventListener('submit', function (e) {
          // Add any custom form submission logic here
          console.log('HubPRO form submitted');
        });
      }
    });
  </script>
{%- endif -%}

